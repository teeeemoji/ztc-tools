    "progress-bar-webpack-plugin": "^1.11.0",
    "webpack": "^4.27.1"
  },
  "devDependencies": {
    "html-webpack-plugin": "^3.2.0"
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint --fix",
      "git add "
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
